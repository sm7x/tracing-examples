doctype html
html
    head
        meta(charset='utf-8')
        title WordExplorer
        link(rel='stylesheet', type='text/css', href='/css/style.css')
        link(href='https://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
    body
        h2 WordExplorer: Vocab List
        .container
            fieldset
                if response
                    for word in response
                        a(href=`/wordExplorer/words/${word.word}`)
                            p= word.word
        a(href='/wordExplorer')
            button#home(
              type='submit'
              style='width:25%; height: 30px; background-color: white; font-size: 15px;'
            ) Home
