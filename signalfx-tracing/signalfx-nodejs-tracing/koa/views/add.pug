doctype html
html
    head
        meta(charset='utf-8')
        title WordExplorer
        link(rel='stylesheet', type='text/css', href='/css/style.css')
        link(href='https://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
    body
        h2 Welcome to WordExplorer
        .container
            fieldset
                form(action = '/word_explorer/add', method = 'POST')
                if response
                    p!= response
                if error
                    p!= error
                a(href='/word_explorer')
                    button#home(
                      type='submit'
                      style='width: 200px; height: 30px; background-color: white; font-size: 15px;'
                    ) Home
